<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/switch_off"
  >
        <!-- 中间输入用户名密码部分 -->
            <LinearLayout
                android:id="@+id/ll_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="vertical"
                android:background="@drawable/background_login"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >
                <!--用户名-->
                <LinearLayout
                    android:id="@+id/ll_yonghu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="center"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:text="账号："/>
                    <!-- 用户名-->
                    <xiahohu.view.ClearEditTextWhite
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:inputType="text"
                        android:background="@null"
                        android:hint="请输入用户名"
                        android:singleLine="true"
                        android:paddingLeft="5dp"
                        android:textSize="22sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/view_line"/>
                <LinearLayout
                    android:id="@+id/ll_mima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="22sp"
                        android:layout_gravity="center"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:src="@mipmap/ic_launcher"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:text="密码："/>
                    <xiahohu.view.ClearEditTextWhite
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入密码"
                        android:textSize="22sp"
                        android:paddingLeft="5dp"
                        android:inputType="numberPassword"
                        android:singleLine="true"
                        android:layout_marginRight="5dp" />
                </LinearLayout>

                <!--记住密码-->
                <LinearLayout
                    android:id="@+id/ll_jizhu"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_alignLeft="@id/ll_mima"
                    android:layout_alignStart="@id/ll_mima"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:src="@drawable/icon_rb_selector_normal"
                        android:layout_gravity="center_vertical"
                        android:tag="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="记住密码"
                        android:textSize="18sp"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>


    <!--登录-->
    <LinearLayout
        android:id="@+id/ll_loge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_user_info"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_pressed"
            android:gravity="center"
            android:text="确认登录"
            android:textColor="@color/white"
            android:textSize="26sp" />
    </LinearLayout>

</RelativeLayout>
